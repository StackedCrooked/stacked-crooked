autocmd FileType make set noexpandtab
colorscheme torte
filetype plugin indent on
set autoindent
set bs=2
set expandtab
set hlsearch 
set incsearch
set nobackup
set nocompatible
set noswapfile
set nowritebackup 
set ruler
set shiftwidth=4
set showmatch
set smartindent
set softtabstop=4 
set tabstop=4 
syntax enable

" Unix settings
if has("unix")
set gfn=Courier\ 10\ Pitch\ 10
winp 600 100
win 100 50
endif

" Windows settings
if has("win32")
set gfn=Courier_New:h10:cANSI
winp 600 0
win 100 50
endif

" Menus
if has("win32")
menu Bookmarks.vimrc :open C:\Program Files\Vim\_vimrc<CR>
endif

" Clojure settings
if has("win32")

endif

