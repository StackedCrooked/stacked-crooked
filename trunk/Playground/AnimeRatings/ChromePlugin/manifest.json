{
    "name": "Anime Ratings",
    "version": "13",
    "description": "Enhances anime pages on Wikipedia with myanimelist.net ratings and extra info.",
    "permissions": [ "http://myanimelist.net/api/anime/search.xml" ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background_page": "background.html",
    "content_scripts": [ {
        "matches": [ "http://en.wikipedia.org/wiki/Category:Anime_of_*",
                     "http://en.wikipedia.org/wiki/Category:Manga_of_*",
                     "http://en.wikipedia.org/wiki/*" ],
          "run_at": "document_end",
          "js": ["content.js"]
        }
    ]
}
